{
  "name": "ts-config",
  "version": "0.2.0",
  "description": "Extendable TSLint and TypeScript configs",
  "license": "MIT",
  "author": "Clemens Akens <clebert@me.com>",
  "repository": {
    "url": "https://github.com/clebert/ts-config.git",
    "type": "git"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  },
  "scripts": {
    "commit": "git-cz",
    "commitmsg": "conventional-changelog-lint -e",
    "release": "npm test && standard-version",
    "test": "npm run test-tslint && npm run test-tslint-rules && npm run test-typescript",
    "test-tslint": "tslint test.ts",
    "test-tslint-rules": "! tslint test.ts 2>&1 | grep -q 'Could not find implementations'",
    "test-typescript": "tsc --project ."
  },
  "devDependencies": {
    "commitizen": "2.8.6",
    "conventional-changelog-lint": "1.1.0",
    "cz-customizable": "4.0.0",
    "husky": "0.11.9",
    "standard-version": "4.0.0",
    "tslint": "4.0.2",
    "typescript": "2.1.1"
  },
  "peerDependencies": {
    "tslint": "4.0.x",
    "typescript": "2.1.x"
  }
}
