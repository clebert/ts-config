{
  "name": "ts-config",
  "version": "0.0.0-development",
  "description": "An opinionated TSLint configuration preset. Works best together with strict TypeScript settings and Prettier.",
  "license": "MIT",
  "author": "Clemens Akens <clebert@me.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/ts-config.git"
  },
  "bugs": {
    "url": "https://github.com/clebert/ts-config/issues"
  },
  "files": [
    "bin/",
    "lib/",
    "tsconfig.json"
  ],
  "bin": {
    "ts-config": "bin/run"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "autosrc --verbose clean",
    "test": "autosrc --verbose all"
  },
  "oclif": {
    "commands": "lib/commands",
    "bin": "ts-config",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "dependencies": {
    "@oclif/command": "^1.5.4",
    "@oclif/config": "^1.8.8",
    "@oclif/errors": "^1.2.2",
    "@oclif/plugin-help": "^2.1.3",
    "common-tags": "^1.8.0",
    "globby": "^8.0.1",
    "json-diff": "^0.5.3",
    "prettier": "^1.14.3",
    "semver": "^5.6.0"
  },
  "peerDependencies": {
    "tslint": "^5.10.0",
    "typescript": "*"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-angular": "^7.1.2",
    "@commitlint/travis-cli": "^7.2.1",
    "@types/common-tags": "^1.4.0",
    "@types/node": "^10.12.0",
    "@types/prettier": "^1.13.2",
    "@types/semver": "^5.5.0",
    "autosrc": "^0.12.0",
    "husky": "^1.1.2",
    "semantic-release": "^15.10.3",
    "travis-deploy-once": "^5.0.9",
    "tslint": "^5.11.0",
    "typescript": "~3.1.3"
  }
}
