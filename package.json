{
  "name": "ts-config",
  "version": "3.0.0",
  "description": "Extendable TSLint and TypeScript configs",
  "license": "MIT",
  "author": "Clemens Akens <clebert@me.com>",
  "repository": {
    "url": "https://github.com/clebert/ts-config.git",
    "type": "git"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  },
  "scripts": {
    "commitmsg": "conventional-changelog-lint -e",
    "cz": "git-cz",
    "prerelease": "npm prune && npm install && npm test",
    "release": "standard-version",
    "test": "npm run test:tslint && npm run test:tslint-rules && npm run test:tslint-type-check && npm run test:tslint-type-check-rules && npm run test:typescript && npm run test:typescript-react",
    "test:tslint": "tslint --config tslint.json --project test-tsconfig.json",
    "test:tslint-rules": "! tslint --config tslint.json --project test-tsconfig.json 2>&1 | grep -q 'Could not find implementations'",
    "test:tslint-type-check": "tslint --config tslint.json --project test-tsconfig.json --type-check",
    "test:tslint-type-check-rules": "! tslint --config tslint.json --project test-tsconfig.json --type-check 2>&1 | grep -q 'Could not find implementations'",
    "test:typescript": "tsc --project test-tsconfig.json",
    "test:typescript-react": "tsc --project test-tsconfig-react.json"
  },
  "devDependencies": {
    "@types/react": "15.0.17",
    "commitizen": "2.9.6",
    "conventional-changelog-lint": "1.1.0",
    "cz-customizable": "4.0.0",
    "husky": "0.13.1",
    "react": "15.4.2",
    "standard-version": "4.0.0",
    "tslib": "1.6.0",
    "tslint": "4.5.1",
    "typescript": "2.2.1"
  },
  "peerDependencies": {
    "tslib": "1.6.x",
    "tslint": "4.5.x",
    "typescript": "2.2.x"
  }
}
